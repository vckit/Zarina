<Page x:Class="Confectionery.Views.Pages.FunctionPages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Confectionery.Views.Pages.FunctionPages"
      mc:Ignorable="d"  FontFamily="Comic Sans MS"
      FontSize="16"
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="Запрос на регистрацию">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">
            <TextBlock Text="Электронная почта:"/>
            <TextBox Name="txbEmail"/>
            <TextBlock Text="Фамилия:"/>
            <TextBox Name="txbLastName"/>
            <TextBlock Text="Имя:"/>
            <TextBox Name="txbFirstName"/>
            <TextBlock Text="Номер договора:"/>
            <TextBox Name="txbNumberContract"/>
            <Button Style="{StaticResource loginButtonStyle}"
                    Content="Регистрация"
                    Margin="0,10,0,0"
                    Click="btnRegistration_Click"/>
        </StackPanel>
    </Grid>
</Page>
